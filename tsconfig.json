{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "preserve",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "data/**/*.json", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "commitlint.config.ts", "plopfile.ts.bak", "plopfile.ts.bak", "plop-templates/**/*.hbs"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true
  },
}
